@using Lightbringer.Rest.Contract
@model Lightbringer.Web.Core.ViewModels.DaemonVm
@{
    // part of this code is also in ChangeStateHandler.ts

    string faChar;
    string color;
    switch (Model.State)
    {
        case DaemonStates.Running:
            faChar = "fa-play";
            color = "badge-success";
            break;
        case DaemonStates.Stopped:
            faChar = "fa-stop";
            color = "badge-danger";
            break;
        case DaemonStates.StartPending:
            faChar = "fa-forward";
            color = "badge-primary";
            break;
        case DaemonStates.StopPending:
            faChar = "fa-eject";
            color = "badge-primary";
            break;
        default:
            faChar = "fa-question";
            color = "badge-secondary";
            break;
    }

    string id = $"{Model.HostId}-{Model.DaemonType}-{Model.DaemonName}";
}

<span id="@id" class="badge @color badge-pill">
    <i class="fas @faChar" title="@Model.State"></i>
</span>
