@using Lightbringer.Rest.Contract
@model string
@{
    string faChar;
    string color;
    switch (Model)
    {
        case DaemonStates.Running:
            faChar = "fa-play";
            color = "badge-success";
            break;
        case DaemonStates.Stopped:
            faChar = "fa-stop";
            color = "badge-danger";
            break;
        default:
            faChar = "fa-question";
            color = "badge-secondary";
            break;
    }
}

<span class="badge @color badge-pill">
    <i class="fas @faChar" title="@Model"></i>
</span>