@model OverviewViewModel
@{
    ViewData["Title"] = "Select Daemons";
    string messageClass = string.IsNullOrEmpty(Model.Error) ? "alert-primary" : "alert-danger";
    string message = Model.Error + Model.Message;
}

<br/>

<div class="row">
    <div class="col-4">
        <h2 class="">Select Daemons</h2>
    </div>
    <div class="col-8">
        <form method="post" asp-action="ListServices">

            <div class="input-group mb-3">
                <input asp-for="ServiceHostUrl" placeholder="host name or complete url" class="form-control"/>
                <input asp-for="Filter" placeholder="Filter" class="form-control"/>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                </div>
            </div>

        </form>
    </div>
</div>

@if (Model.Message != null || Model.Error != null)
{
    <div class="alert @messageClass alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @message
    </div>
}

@if (Model.AllDaemons != null && Model.AllDaemons.Any())
{
    <form method="post" asp-action="RegisterServices">
        <input type="hidden" asp-for="ServiceHostUrl" />
        <input type="hidden" asp-for="Filter" />

        <table class="table table-striped border">
            <thead>
            <tr class="table-primary">
                <th style="width: 1%;"></th>
                <th style="width: 1%;"></th>
                <th style="width: 32pt;">&nbsp;&nbsp;&nbsp;</th>
                <th>Name</th>
                <th>Service Name</th>
            </tr>
            </thead>
            <tbody>

            @for (int i = 0; i < Model.AllDaemons.Count; i++)
            {
                <tr>
                    <td style="vertical-align: middle">
                        <input type="hidden" asp-for="@Model.AllDaemons[i].Dto.ServiceType" />
                        <input type="hidden" asp-for="@Model.AllDaemons[i].Dto.State" />
                        <input type="hidden" asp-for="@Model.AllDaemons[i].Dto.DisplayName" />
                        <input type="hidden" asp-for="@Model.AllDaemons[i].Dto.ServiceName" />

                        <i class="fas fa-cogs text-primary" title="@Model.AllDaemons[i].Dto.ServiceType"></i>
                    </td>
                    <td style="vertical-align: middle">
                        <partial name="_ServiceStatePartial" model="@Model.AllDaemons[i].Dto.State"/>
                    </td>
                    <td style="vertical-align: middle">
                        <input asp-for="@Model.AllDaemons[i].Checked" type="checkbox" class="form-control"/>
                    </td>
                    <td style="vertical-align: middle">
                        @Model.AllDaemons[i].Dto.DisplayName
                    </td>
                    <td style="vertical-align: middle">
                        @Model.AllDaemons[i].Dto.ServiceName
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <button type="submit" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Register</button>
    </form>
}