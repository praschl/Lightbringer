@model AddServiceHostViewModel
@{
    ViewData["Title"] = "Add Daemon Url";
}

<br />
@if (Model.Error != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <i class="fas fa-times"></i>
        </button>
        <div class="text-danger">@Model.Error</div>
    </div>
}

<div class="row">
    <div class="col-4">
        <h2>Add Daemon Url</h2>
    </div>
    <div class="col-8">
        <form method="post" asp-action="AddServiceHostUrl">

            <div class="input-group mb-3">
                <input asp-for="ServiceHostUrl" placeholder="host name or complete url" class="form-control" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.ServiceHosts)
    {
        <div class="col-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">
                            <h3 class="text-secondary">@item.Name (@(item.SubscribedServices?.Count ?? 0))</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div>@item.Url</div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col text-right">
                            <div class="btn-group">
                                <a href="#" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
