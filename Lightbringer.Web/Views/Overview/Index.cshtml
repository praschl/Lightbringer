@model AddServiceHostViewModel
@{
    ViewData["Title"] = "Add Daemon Url";
}

<br />
@if (Model.Error != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <i class="fas fa-times"></i>
        </button>
        <div class="text-danger">@Model.Error</div>
    </div>
}

<div class="row">
    <div class="col-4">
        <h2>Add Daemon Url</h2>
    </div>
    <div class="col-8">
        <form method="post" asp-action="AddServiceHostUrl">

            <div class="input-group mb-3">
                <input asp-for="ServiceHostUrl" placeholder="host name or complete url" class="form-control" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>

